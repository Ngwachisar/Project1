<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John McDonald"
        android:textSize="30sp"
        android:textColor="#0B0B0B"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/img_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los Angles,CA"
        android:layout_marginLeft="5dp"
        android:textColor="#0B0B0B"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        app:layout_constraintLeft_toRightOf="@+id/img_location"/>

    <ImageView
        android:id="@+id/img_professor"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:src="@drawable/professor"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Follow"
        android:background="@drawable/follow_button"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/img_location"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_postno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:textColor="#080808"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/btn_follow"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_followerno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1256"
        android:textColor="#080808"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn_follow"
        app:layout_constraintLeft_toRightOf="@id/txt_postno"/>

    <TextView
        android:id="@+id/txt_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_postno"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/txt_followerno"
        app:layout_constraintLeft_toRightOf="@+id/txt_post"/>

    <ImageView
        android:id="@+id/img_rainy1"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:src="@drawable/rainy1"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/txt_post"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_rainy2"/>

    <ImageView
        android:id="@+id/img_rainy2"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:src="@drawable/rainy3"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_post"
        app:layout_constraintLeft_toRightOf="@id/img_rainy1"
        app:layout_constraintRight_toLeftOf="@id/img_rainy3"/>

    <ImageView
        android:id="@+id/img_rainy3"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:src="@drawable/rainy2"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_post"
        app:layout_constraintLeft_toRightOf="@id/img_rainy2"
        app:layout_constraintRight_toLeftOf="@id/img_rainy4"/>

    <ImageView
        android:id="@+id/img_rainy4"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:src="@drawable/rainy4"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_post"
        app:layout_constraintLeft_toRightOf="@id/img_rainy3"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/svg_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_facebook"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/img_rainy1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/svg_twitter"/>

    <ImageView
        android:id="@+id/svg_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_twitter_svg"
        app:layout_constraintTop_toBottomOf="@id/img_rainy1"
        app:layout_constraintLeft_toRightOf="@+id/svg_facebook"
        app:layout_constraintRight_toLeftOf="@id/svg_instagram"/>

    <ImageView
        android:id="@+id/svg_instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_instagram_color_svg"
        app:layout_constraintTop_toBottomOf="@id/img_rainy1"
        app:layout_constraintLeft_toRightOf="@+id/svg_twitter"
        app:layout_constraintRight_toLeftOf="@id/svb_youtube"/>

    <ImageView
        android:id="@+id/svb_youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_youtube_svg"
        app:layout_constraintTop_toBottomOf="@id/img_rainy1"
        app:layout_constraintLeft_toRightOf="@id/svg_instagram"
        app:layout_constraintRight_toLeftOf="@id/svb_instagram3"/>

    <ImageView
        android:id="@+id/svb_instagram3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_instagram_color_svg"
        app:layout_constraintTop_toBottomOf="@id/img_rainy1"
        app:layout_constraintLeft_toRightOf="@id/img_rainy2"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/svg_facebook"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="25sp"
        android:textColor="#414040"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/v_line"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paragraph"
        android:textColor="#414040"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_about"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>